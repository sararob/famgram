<div class="faded-body">
  <%= render 'layouts/header' %>
  <div class="container">
    <% flash.each do |name, msg| %>
        <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
          <a class="close" data-dismiss="alert">Ã—</a>
          <%= msg %>
        </div>
    <% end %>
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span12">
          <div class="jumbotron">
            <div class="row-fluid">
              <div class="columnA pull-left">
                <%= image_tag('postcard1.png') %>
              </div>
              <div class="form columnB pull-right">
                <%= render 'form' %>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>

    <div class="container explain">
      <%= render 'explain' %>
    </div>
    <%= render 'layouts/footer' %>
  </div>
  <div class="bottom-half"></div>
</div>

<div class="transparent-cover">
</div>

<div class="confirm-card">
  <div class="stripe"><%= image_tag('stripebackground.png') %></div>
  <div class="white"><%= image_tag('whitebackground.png') %></div>
  <div class="pop-text">
    <h2>Thanks for signing up with FamGram!</h2>
    <p>We are just getting started and we'll let you know as soon as we're ready to start sending FamGrams. If you have any questions, feel free to email us at hello@famgram.co</p>
    <h3>Share with family and friends!</h3>
    <div class="row-fluid">
      <ul class="nav pull-right share-this confirm-share">
        <span class='st_sharethis_custom'><%= image_tag('redmail.png') %></span>
        <span class='st_sharethis_custom'><%= image_tag('bluefacebook.png') %></span>
        <span class='st_sharethis_custom'><%= image_tag('bluetwitter.png') %></span>
    </div>
    </ul>
    <br>
    <br>
    <div class="share-link">
      <p>Share This Link:  </p>
      <input value="http://famgram.co">
    </div>
  </div>
</div>